<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" styleClass="fondo" stylesheets="@../styles/claro.css"
            xmlns="http://javafx.com/javafx/18"
            fx:controller="com.example.myanimelist.controllers.anime.AnimeController">
    <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="550.0" spacing="30.0">
            <Label fx:id="txtTittle" prefHeight="17.0" prefWidth="388.0" styleClass="animeDataText"
                   text="Label">
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="txtEpisodes" prefHeight="17.0" prefWidth="363.0" styleClass="animeDataText"
                   text="Label">
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="txtStatus" prefHeight="17.0" prefWidth="405.0" styleClass="animeDataText"
                   text="Label">
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="txtDate" prefHeight="17.0" prefWidth="352.0" styleClass="animeDataText"
                   text="Label">
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="txtGenre" prefHeight="25.0" prefWidth="369.0" styleClass="animeDataText"
                   text="Label">
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>
            </Label>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="450.0" spacing="80.0">
            <ImageView fx:id="imageAnime" fitHeight="280.0" fitWidth="190.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                <Button mnemonicParsing="false" onAction="#editAnime" prefHeight="27.0" prefWidth="70.0"
                        text="Editar"/>
                <Button mnemonicParsing="false" onAction="#deleteAnime" prefWidth="70.0"
                        text="Eliminar"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
